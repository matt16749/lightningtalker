<div class="all-students col-md-8 col-md-offset-2">
<table class="table table-striped table-bordered">
  <caption><h2>All Students</h2></caption>
  <thead>
    <tr>
      <th>#</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Email</th>
      <th>Number of Requests</th>
    </tr>
  </thead>
  <tbody>
  <% @students.each do |student| %>
    <tr>
      <td><%= link_to "#{student.id}", student_path(student) %></td>
      <td><%= student.first_name %></td>
      <td><%= student.last_name %></td>
      <td><%= student.email %></td>
      <td><%= Request.by_student(student.id).count %></td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>